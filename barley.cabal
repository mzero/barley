    ghc >= 6.10 && < 7.1,
    ghc-prim == 0.2.*,
    plugins >= 1.5.1.4 && < 1.6,
    snap-core == 0.4.*,
    snap-server == 0.4.*,
    html == 1.0.*,
    text >= 0.7 && < 0.12,
